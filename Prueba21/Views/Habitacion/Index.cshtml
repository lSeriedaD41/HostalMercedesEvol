@model List<Prueba21.Models.Habitacion>

@{
    ViewData["Title"] = "Habitaciones";

    // Capturar filtro desde la URL
    string estadoFiltro = Context.Request.Query["estado"];
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-door-open"></i> Habitaciones
        </h2>

        @if (User.IsInRole("Administrador"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Nueva Habitación
            </a>
        }
    </div>

    <!-- FILTRO POR ESTADO -->
    <form method="get" asp-action="Index" class="mt-3">
        <div class="row g-2">

            <div class="col-md-4">
                <select name="estado" class="form-select">
                    <option value="">-- Todos los estados --</option>
                    <option value="Disponible" selected="@(estadoFiltro == "Disponible")">Disponible</option>
                    <option value="Reservada" selected="@(estadoFiltro == "Reservada")">Reservada</option>
                    <option value="Ocupada" selected="@(estadoFiltro == "Ocupada")">Ocupada</option>
                    <option value="EnMantenimiento" selected="@(estadoFiltro == "EnMantenimiento")">En Mantenimiento</option>
                </select>
            </div>

            <div class="col-md-2">
                <button class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i> Filtrar
                </button>
            </div>

        </div>
    </form>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover border shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Número</th>
                    <th>Tipo</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var hab in Model)
                {
                    <tr>
                        <td>N°- @hab.Numero</td>
                        <td>@hab.Tipo</td>
                        <td>S/ @hab.Precio.ToString("F2")</td>

                        <td>
                            @switch (hab.Estado)
                            {
                                case Prueba21.Models.Habitacion.EstadoHabitacion.Disponible:
                                    <span class="badge bg-success">Disponible</span>
                                    break;

                                case Prueba21.Models.Habitacion.EstadoHabitacion.Reservada:
                                    <span class="badge bg-primary">Reservada</span>
                                    break;

                                case Prueba21.Models.Habitacion.EstadoHabitacion.Ocupada:
                                    <span class="badge bg-danger">Ocupada</span>
                                    break;

                                case Prueba21.Models.Habitacion.EstadoHabitacion.EnMantenimiento:
                                    <span class="badge bg-warning text-dark">En Mantenimiento</span>
                                    break;
                            }
                        </td>

                        <td class="text-center">

                            @* EDITAR *@
                            @if (User.IsInRole("Administrador"))
                            {
                                <a asp-action="Edit" asp-route-id="@hab.HabitacionId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            }

                            @* DETALLES *@
                            @if (User.IsInRole("Administrador") || User.IsInRole("Recepcionista"))
                            {
                                <a asp-action="Details" asp-route-id="@hab.HabitacionId" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Detalles
                                </a>
                            }

                            @* ELIMINAR *@
                            @if (User.IsInRole("Administrador"))
                            {
                                <a asp-action="Delete" asp-route-id="@hab.HabitacionId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            }

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
